@{
    ViewData["Title"] = "Add Movie";
}

@model MovieCollection.Models.Movies

<div class="text-center">
    <h1 class="display-4">Add a Movie</h1>
    <form asp-action="AddMovie" method="post">
        <div class="form-row">
            <div class="form-group col-md-6">
                <label asp-for="Category">Category:</label>
                <select class="form-control" asp-for="Category">
                    <option value="">Select One</option>
                    <option value="Action/Adventure">Action/Adventure</option>
                    <option value="Comedy">Comedy</option>
                    <option value="Drama">Drama</option>
                    <option value="Family">Family</option>
                    <option value="Horror/Suspense">Horror/Suspense</option>
                    <option value="Miscellaneous">Miscellaneous</option>
                    <option value="Television">Television</option>
                    <option value="VHS">VHS</option>
                </select>
            </div>
            <div class="form-group col-md-6">
                <label asp-for="Title">Title:</label>
                <input class="form-control" asp-for="Title" />
            </div>
        </div>
        <div class="form-row">
            <div class="form-group col-md-6">
                <label asp-for="Year">Year:</label>
                <input class="form-control" asp-for="Year" />
            </div>

            <div class="form-group col-md-6">
                <label asp-for="Director">Director:</label>
                <input class="form-control" asp-for="Director" />
            </div>
        </div>
        <div class="form-row">
            <div class="form-group col-md-6">
                <label asp-for="Rating">Rating:</label>
                <select class="form-control" asp-for="Rating">
                    <option value="">Select One</option>
                    <option value="G">G</option>
                    <option value="PG">PG</option>
                    <option value="PG-13">PG-13</option>
                    <option value="R">R</option>
                </select>
            </div>
            <div class="form-check">
                <div>
                    <label class="form-check-label" for="gridCheck1" asp-for="Edited">Edited:</label>
                </div>
                <div>
                    <input class="form-check-input" type="checkbox" id="gridCheck1" asp-for="Edited">
                </div>
            </div>
        </div>

        
        <div class="form-row">
            <div class="form-group col-md-6">
                <label asp-for="LentTo">Lent To:</label>
                <input class="form-control" asp-for="LentTo" />
            </div>
            <div class="form-group col-md-6">
                <label asp-for="Notes">Notes:</label>
                <input class="form-control" asp-for="Notes" />
            </div>
        </div>
        <button type="submit">Add Movie to List</button>
    </form>
</div>