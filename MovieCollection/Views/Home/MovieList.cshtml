@{
    ViewData["Title"] = "Movie List";
}

@model IEnumerable<Movies>

<div class="text-center table-sm">
    <h1 class="display-4">Movie List</h1>
    <h2>These are the movies we have available!</h2>
    <h6><a asp-action="AddMovie">Add Another Movie</a></h6>

    <table class="table">
        <thead class="thead-dark">
            <tr>
                <th scope="col">Category</th>
                <th scope="col">Title</th>
                <th scope="col">Year</th>
                <th scope="col">Director</th>
                <th scope="col">Rating</th>
                <th scope="col">Edited</th>
                <th scope="col">Lent To</th>
                <th scope="col">Notes</th>
                <th scope="col">Edit</th>
                <th scope="col">Delete</th>
            </tr>
        </thead>

        <tbody>
            @foreach (MovieCollection.Models.Movies x in Model)
            {
                @if (x.Title != "Independence Day")
                {
                    <tr scope="row">
                        <td>@x.Category</td>
                        <td>@x.Title</td>
                        <td>@x.Year</td>
                        <td>@x.Director</td>
                        <td>@x.Rating</td>
                        <td>@x.Edited</td>
                        <td>@x.LentTo</td>
                        <td>@x.Notes</td>
                        <td>
                            <form asp-action="EditMovie" method="get">
                                <input type="hidden" name="MovieID" value="@x.MovieID" />
                                <button type="submit" class="btn btn-success">Edit</button>
                            </form>

                        </td>
                        <td>
                            <form asp-action="DeleteMovie">
                                <input type="hidden" name="MovieID" value="@x.MovieID" />
                                <button class="btn btn-danger">Delete</button>
                            </form>
                            
                        </td>
                    </tr>
                }
            }
        </tbody>
    </table>
</div>
